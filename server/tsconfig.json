{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS", // Changed from ESNext
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}